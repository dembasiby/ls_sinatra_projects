

<form method="post" action="/categories/<%= params[:id] %>/edit">
  <div class="form-group">
    <label for="category">Update Category Name</label>
    <input type="text" name="category" class="form-control" value="<%= params[:category] || @category[:name] %>">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
  <a href="/categories/<%= params[:id] %>">Cancel</a>
</form>
